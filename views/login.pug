section#login
  .container
    .row
      .col-xs-12
        .form-wrap
          h1 Inicia sesi&oacute;n
          form#login-form(role='form' method='post')
            .form-group
              label.sr-only(for='inputEmail') Usuario / Correo
              input#inputEmail.form-control(type='email' name='email' placeholder='Inrese su correo o nombre de usuario', required='')
            .form-group
              label.sr-only(for='inputPassword') Contrase&ntilde;a
              input#inputPassword.form-control(type='password' name='password' placeholder='Contrase√±a')
            .checkbox
              span.character-checkbox(onclick='showPassword()')
              span.label Monstrar contrase&ntilde;a
            input#btn-login.btn.btn-custom.btn-lg.btn-block(type='submit' value='Ingresar')
          a.forget(href='javascript:;')
            | No tienes una cuenta? 
            br
          a.forget(href='javascript:;' data-toggle='modal' data-target='.forget-modal') Olvidaste tu Contrase&ntilde;a?
          hr
      // /.col-xs-12
    // /.row
  // /.container
.modal.fade.forget-modal(tabindex='-1' role='dialog' aria-labelledby='myForgetModalLabel' aria-hidden='true')
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        button.close(type='button' data-dismiss='modal')
          span(aria-hidden='true') &times;
          span.sr-only Close
        h4.modal-title Recovery password
      .modal-body
        p Type your email account
        input#recovery-email.form-control(type='email' name='recovery-email' autocomplete='off')
      .modal-footer
        button.btn.btn-default(type='button' data-dismiss='modal') Cancel
        button.btn.btn-custom(type='button') Recovery
